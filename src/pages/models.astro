---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getCollection } from "astro:content";

const models = await getCollection("models");

function formatSize(bytes: number): string {
    if (bytes < 1024) return bytes + " B";
    if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + " KB";
    return (bytes / (1024 * 1024)).toFixed(1) + " MB";
}
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title="3D Models - Lucas Sifoni"
            description="3D printable models"
            type="website"
        />
        <style scoped>
            ul {
                width: 100%;
                list-style-type: none;
                padding: unset;
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                gap: 1em;
            }

            ul li {
                display: flex;
                flex-direction: column;
                border-bottom: 1px dotted #ccc;
                padding-bottom: 0.8em;
            }

            ul li a {
                text-decoration: none;
                color: inherit;
            }

            ul li a:hover h3 {
                text-decoration: underline;
            }

            ul li img {
                width: 100%;
                aspect-ratio: 4 / 3;
                object-fit: cover;
                border-radius: 3px;
                margin-bottom: 0.5em;
            }

            ul li .placeholder {
                width: 100%;
                aspect-ratio: 4 / 3;
                background: #eee;
                border-radius: 3px;
                margin-bottom: 0.5em;
                display: flex;
                align-items: center;
                justify-content: center;
                color: #999;
                font-size: 0.85em;
            }

            ul li h3 {
                margin: 0 0 0.25em 0;
                font-weight: 400;
                font-size: 0.95em;
            }

            ul li p {
                margin: 0;
                color: #555;
                font-size: 0.8em;
            }

            main {
                max-width: 1000px;
                margin: 0 auto;
            }

            h2 {
                margin-bottom: 1em;
                margin-top: 1.8em;
                font-weight: 400;
            }

            @media screen and (max-width: 800px) {
                ul {
                    grid-template-columns: repeat(2, 1fr);
                }
            }

            @media screen and (max-width: 500px) {
                ul {
                    grid-template-columns: 1fr;
                }
            }

        </style>
    </head>
    <body>
        <Header have_langs={false} />
        <main>
            <section>
                <ul>
                    {
                        models.map((model) => {
                            const thumb = model.data.thumb;
                            const totalSize = model.data.files.reduce(
                                (s, f) => s + f.size,
                                0,
                            );
                            return (
                                <li>
                                    <a href={`/models/${model.id}`}>
                                        {thumb ? (
                                            <img
                                                src={`/models/${model.id}/${thumb}`}
                                                alt={model.data.name}
                                            />
                                        ) : (
                                            <div class="placeholder">
                                                No image
                                            </div>
                                        )}
                                        <h3>{model.data.name}</h3>
                                        <p>
                                            {model.data.files.length} file{model.data.files.length !== 1 ? "s" : ""} &middot; {formatSize(totalSize)}
                                        </p>
                                    </a>
                                </li>
                            );
                        })
                    }
                </ul>
            </section>
        </main>
        <Footer />
    </body>
</html>
